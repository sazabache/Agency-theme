					.col-md-3.col-sm-6
						a(href= "#")
							img.img-responsive.img-centered(src="../img/logos/creative-market.jpg")
		section#contact
			.container
				+row('Contact Us', 'Lorem ipsum dolor sit amet consectetur')
				.row
					.col-md-12
						form#contactForm(name="sentMessage" novalidate)
							.row
								.col-md-6
									.form-group
										input.form-control#name(type="text" placeholder="Your Name *" required data-validation-required-message="Please enter your name.")
										p.help-block.text-danger
									.form-group
										input.form-control#name(type="email" placeholder="Your Email *" required data-validation-required-message="Please enter your email address.")
										p.help-block.text-danger
									.form-group
										input.form-control#name(type="tel" placeholder="Your Phone *" required data-validation-required-message="Please enter your phone number.")
										p.help-block.text-danger

								.col-md-6
									.form-group
										textarea.form-control#message(placeholder="Your Message *" required data-validation-required-message="Please enter a message.")
										p.help-block.text-danger
								.clearfix
									.col-md-12.text-center
										#success
										button.btn.btn-xl(type="submit") Send Message
