							img.img-responsive(src="../img/portfolio/dreams.png")
						.portfolio-caption
							+portfolio('Dreams' , 'Website Design')
		section#about
			.container
				+row('About', 'Lorem ipsum dolor sit amet consectetur')
				.row
					.col-md-12
						ul.timeline
							li
								.timeline-image
									img.img-circle.img-responsive(src="../img/about/1.jpg")
