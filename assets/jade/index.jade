						+sector('Responsive Design', 'Lorem ipsum dolor sit amet consectetur adipiscing elit. Minima maxime quam architecto quo inventore harum ex magni, dicta impedit.')
					.col-md-4
						span.fa-stack.fa-4x
							.fa-stack-2x.circle
							i.fa.fa-lock.fa-stack-1x.fa-inverse
						+sector('Web Security', 'Lorem ipsum dolor sit amet consectetur adipiscing elit. Minima maxime quam architecto quo inventore harum ex magni, dicta impedit.')
		section#portfolio.bg-light-gray
			.container
				+row('Portfolio', 'Lorem ipsum dolor sit amet consectetur')
				.row
					.col-md-4.col-sm-6.portfolio-item
						a.portfolio-link(href="#portfolioModal1" data-toggle="modal")
							img.img-responsive(src="../img/portfolio/roundicons.png")
						.portfolio-caption
							+portfolio('Round Icons' , 'Graphic Design')
					.col-md-4.col-sm-6.portfolio-item
						a.portfolio-link(href="#portfolioModal2" data-toggle="modal")
							img.img-responsive(src="../img/portfolio/startup-framework.png")
						.portfolio-caption
							+portfolio('Startup Framework' , 'Website Design')
					.col-md-4.col-sm-6.portfolio-item
						a.portfolio-link(href="#portfolioModal3" data-toggle="modal")
							img.img-responsive(src="../img/portfolio/treehouse.png")
						.portfolio-caption
							+portfolio('Treehouse' , 'Website Design')
					.col-md-4.col-sm-6.portfolio-item
						a.portfolio-link(href="#portfolioModal4" data-toggle="modal")
							img.img-responsive(src="../img/portfolio/golden.png")
						.portfolio-caption
							+portfolio('Golden' , 'Website Design')
					.col-md-4.col-sm-6.portfolio-item
