include mixins
doctype
html
	head
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		title Agency theme
		link(href="css/bootstrap.min.css" rel="stylesheet")
		link(href="css/main.css" rel="stylesheet")
		link(href="font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css")		
	
	body#pagetop.index
		nav.navbar.navbar-default.navbar-fixed-top
			.container
				.navbar-header.page-scroll
					button.navbar-toggle(type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1")
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand.page-scroll(href="#") Start Bootstrap
				#bs-example-navbar-collapse-1.collapse.navbar-collapse
					ul.nav.navbar-nav.navbar-right.text-center
						li.hidden
							a(href="#page-top")
						+page-scroll('Services', '#services')
						+page-scroll('Portfolio', '#portfolio')
						+page-scroll('About', '#about')
						+page-scroll('Team', '#team')
						+page-scroll('Contact', '#contact')
		header
			.container
				.intro-text
					.intro-lead-in Welcome to Our Studio!
					.intro-heading It's Nice to Meet You
					a#services.page-scroll.btn.btn-xl Tell me more
		section#services
			.container
				+row('Services', 'Lorem ipsum dolor sit amet consectetur')
				.row.text-center
					.col-md-4
						span.fa-stack.fa-4x
							.fa-stack-2x.circle
							i.fa.fa-shopping-cart.fa-stack-1x.fa-inverse
